<h1 class ='header'><%= @article.title %></h1>

<p class = 'body'><%= @article.body %></p>


<% if current_user.present? && (current_user.id == @article.user.id) %>
  <ul>
  <li><%= link_to 'Edit', edit_article_path(@article) %></li>
  <td><%= button_to 'Delete', article_path(@article), method: :delete, data: {confirm: 'Are you sure?'} %></td>
  </ul>
<% end %>

<div class = 'comments'>
<h2 class = 'title'>Comments</h2>
<%= render @article.comments %>


<% if current_user %>
  <h2 class = 'title'>Add a comment:</h2>
  <%= render 'comments/form' %>
  <%= link_to 'Log out', destroy_user_session_path, 'data-turbo-method': :delete%>
<% else %>
  <p> you need to be log in to comment an article pls sing in or sing up down below </p>
  <%= link_to "Sing in", new_user_session_path %>
  <br />
  <%= link_to "Sing up", new_user_registration_path %>
<% end %>
</div>  

